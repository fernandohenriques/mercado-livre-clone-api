{
  "name": "mercado-livre-clone-api",
  "version": "1.0.0",
  "description": "Mercado Livre short app clone API",
  "main": "bin/server.js",
  "scripts": {
    "start": "node ./bin/server.js",
    "dev": "nodemon ./bin/server.js",
    "test:lint": "eslint . --fix",
    "test:unit": "mocha test/unit/**/*.js --colors --exit",
    "test:coverage": "nyc --reporter=html --reporter=text npm run test:unit --colors"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@hapi/joi": "^16.1.7",
    "axios": "^0.19.0",
    "axios-cache-adapter": "^3.0.0-beta.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "morgan": "^1.9.1",
    "nodemon": "^1.19.4",
    "ramda": "^0.26.1"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "5.16.0",
    "eslint-plugin-node": "^10.0.0",
    "faker": "^4.1.0",
    "mocha": "^6.2.2",
    "nyc": "^14.1.1"
  },
  "engines": {
    "node": ">=10.11.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernandohenriques/mercado-livre-clone-api.git"
  },
  "author": "Fernando Henriques",
  "license": "ISC"
}
